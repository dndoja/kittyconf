macos_option_as_alt yes
font_family      Hack Nerd Font
bold_font        auto
italic_font      auto
bold_italic_font auto
font_size 13.0

# BEGIN_KITTY_THEME
# kanagawabones
include current-theme.conf
# END_KITTY_THEME

# background_image bg.png
background_image_layout cscaled
background_image_anchor center
background_tint 0.8
background_tint_gaps 0.5
dim_opacity 0.4
map shift+space next_window
map super+shift+t new_tab
map super+shift+l next_layout
map super+t new_window_with_cwd
